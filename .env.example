# Copy to .env for dev (Prisma reads from .env by default)
# You can also use .env.local for Next.js overrides.
#
# Supabase Postgres:
# - DATABASE_URL: use the pooler (transaction) connection string
# - DIRECT_URL:  use the direct connection string (required for Prisma schema operations)
DATABASE_URL="postgresql://..."
DIRECT_URL="postgresql://..."

# Auth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="change-me-in-dev"

# Signup gate (required)
SIGNUP_INVITE_CODE="purely-dev"

# Stripe (Portal billing + entitlements)
# If STRIPE_SECRET_KEY is missing, billing UI/actions are disabled.
STRIPE_SECRET_KEY=""

# Price IDs used for entitlement checks (customer portal)
# These must be Stripe Price IDs like price_123...
STRIPE_PRICE_BLOG_AUTOMATION=""
STRIPE_PRICE_BOOKING_AUTOMATION=""
STRIPE_PRICE_CRM_AUTOMATION=""

# Optional: demo portal users (hard-coded entitlements by email)
DEMO_PORTAL_FULL_EMAIL="demo-full@purelyautomation.dev"
DEMO_PORTAL_LIMITED_EMAIL="demo-limited@purelyautomation.dev"

# Demo seeding (opt-in)
# Set to 1 only if you want `prisma db seed` to create demo users/sample data.
SEED_DEMO_DATA=""

# AI (OpenAI-compatible). Optional for now.
AI_BASE_URL="https://api.openai.com/v1"
AI_API_KEY=""
AI_MODEL="gpt-4o-mini"

# File uploads (dev)
UPLOAD_DIR="./uploads"

# Marketing (public landing page)
# Used by /api/public/appointments/book to pick a setter user for marketing bookings.
# Recommended: set this to a MANAGER or ADMIN user email.
MARKETING_SETTER_EMAIL=""

# Optional: protect the cron endpoint with a shared secret header.
MARKETING_CRON_SECRET=""

# Optional: protect the weekly blog generation cron endpoint.
# If not set, it will fall back to MARKETING_CRON_SECRET.
BLOG_CRON_SECRET=""

# Optional: protect the booking reminders cron endpoint.
BOOKING_REMINDERS_CRON_SECRET=""

# Optional: protect the review requests cron endpoint.
REVIEWS_CRON_SECRET=""

# Optional: enable follow-up sending
SENDGRID_API_KEY=""
SENDGRID_FROM_EMAIL=""

TWILIO_ACCOUNT_SID=""
TWILIO_AUTH_TOKEN=""
TWILIO_FROM_NUMBER=""
